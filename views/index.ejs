<% layout("/layouts/boilerplate") %>
<body>
    <!--<form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form>-->
    <h3>All Listings</h3>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card" style="width: 17.5rem;">

        <!--this class is used to place text on the image-->
        <div class="card-img-overlay"></div>

        <img src=<%= listing.image %> class="card-img-top" alt="listing-image" style="height:20rem;">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    </a>
      <% } %>
    </div>
</body>
